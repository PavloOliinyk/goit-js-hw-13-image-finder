{{#each this}}
  <h1 class='card__title'>{{name}}</h1>

  <div class='card__wrapper'>
    <ul>
      <li class='list card__item'>
        <span class='card__text'>Capital:</span>
        {{capital}}
      </li>
      <li class='list card__item'>
        <span class='card__text'>Population:</span>
        {{population}}
      </li>
      <li class='list card__item'>
        <span class='card__text'>Languages:</span>
        <ul class='card__list'>
          {{#each languages}}
            <li class='card__item'>{{this.name}}</li>
          {{/each}}
        </ul>
      </li>
    </ul>
    <div class='card__image'>
      <img src='{{flag}}' alt='{{name}}' />
    </div>
  </div>
{{/each}}